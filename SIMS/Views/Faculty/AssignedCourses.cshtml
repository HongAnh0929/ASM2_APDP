@model IEnumerable<SIMS.DatabaseContext.Entities.Course>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Assigned Courses";
    ViewData["breadcrumb"] = "Faculty";
    ViewData["breadcrumb_item"] = "Assigned Courses";
}

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No assigned courses found.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>ID</th>
                <th>Course Name</th>
                <th>Class</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th style="width:150px">Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.CourseId</td>
                    <td>@c.CourseName</td>
                    <td>@c.Class</td>
                    <td>@c.StartDate?.ToString("dd/MM/yyyy")</td>
                    <td>@c.EndDate?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-controller="Schedules"
                           asp-action="Index"
                           asp-route-courseId="@c.CourseId"
                           class="btn btn-primary btn-sm">
                            Schedule
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
