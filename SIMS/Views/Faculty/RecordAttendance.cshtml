@model IEnumerable<SIMS.DatabaseContext.Entities.Student>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";

    ViewData["title"] = "Record Attendance";
    ViewData["breadcrumb"] = "Faculty";

    int courseId = ViewBag.CourseId;
    string courseName = ViewBag.CourseName;
    string className = ViewBag.ClassName;
    DateTime date = ViewBag.Date;

    Dictionary<int, bool> attendance =
        ViewBag.AttendanceDict as Dictionary<int, bool>;
}

<h2>Record Attendance for @courseName (@className)</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="RecordAttendanceSubmit" method="post" class="mt-3">

    <input type="hidden" name="courseId" value="@courseId" />
    <input type="hidden" name="date" value="@date.ToString("yyyy-MM-dd")" />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Student ID</th>
                <th>Student Name</th>
                <th class="text-center">Present</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var student in Model)
            {
                bool present =
                attendance != null &&
                attendance.ContainsKey(student.StudentId) &&
                attendance[student.StudentId];

                <tr>
                    <td>@student.StudentId</td>
                    <td>@student.FullName</td>
                    <td class="text-center">
                        <input type="checkbox"
                               name="presentStudentIds"
                               value="@student.StudentId"
                               @(present ? "checked" : "") />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary"> Save Attendance </button>

    <a asp-action="AssignedCourses"
       asp-controller="Faculty"
       class="btn btn-secondary ms-2">
        Back
    </a>
</form>

<script>
    setTimeout(() => {
        const alert = document.querySelector('.alert');
        if (alert) alert.remove();
    }, 3000);
</script>
