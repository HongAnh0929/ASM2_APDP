@model IEnumerable<SIMS.DatabaseContext.Entities.Faculty>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Faculty List";
    ViewData["breadcrumb"] = "Faculty";
    ViewData["breadcrumb_item"] = "List of Faculty";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text"
               name="search"
               value="@(ViewBag.SearchTerm ?? "")"
               class="form-control"
               placeholder="Search faculty name..." />
        <button class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Faculty Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Phone</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Username</th>
                <th>Actions</th>
                <th>Courses</th>
            }
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center">No faculty found.</td>
            </tr>
        }
        else
        {
            @foreach (var f in Model)
            {
                <tr>
                    <td>@f.FacultyId</td>
                    <td>@f.FacultyName</td>
                    <td>@f.Email</td>
                    <td>@f.Department</td>
                    <td>@f.Phone</td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td>@f.User?.Username</td>

                        <td>
                            <a asp-action="Edit"
                               asp-route-id="@f.FacultyId"
                               class="btn btn-warning btn-sm">
                                Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@f.FacultyId" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this faculty?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>

                        <td>
                            <a asp-action="AssignedCourses"
                               asp-route-facultyId="@f.FacultyId"
                               class="btn btn-info btn-sm">
                                Courses
                            </a>

                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
