@model SIMS.DatabaseContext.Entities.Student

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Add new Student";
    ViewData["breadcrumb"] = "Students";
    ViewData["breadcrumb_item"] = "Add new student";
}

<form asp-action="Add" method="post">

    <div class="form-group">
        <label>Full Name</label>
        <input name="FullName" class="form-control" required />
    </div>

    <!-- EMAIL -->
    <div class="form-group">
        <label>Email</label>
        <input name="Email" type="email" class="form-control" required />

        @if (ViewBag.EmailError != null)
        {
            <div class="text-danger">
                @ViewBag.EmailError
            </div>
        }
    </div>

    <div class="form-group">
        <label>Major</label>
        <input name="Major" class="form-control" />
    </div>

    <div class="form-group">
        <label>Gender</label>
        <input name="Gender" class="form-control" />
    </div>

    <div class="form-group">
        <label>Date of Birth</label>
        <input name="Dob" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>Class</label>
        <select name="Class" class="form-control" required>
            <option value="">-- Select Class --</option>

            @if (ViewBag.Classes != null)
            {
                foreach (var cls in ViewBag.Classes)
                {
                    <option value="@cls">@cls</option>
                }
            }
        </select>
    </div>


    <div class="form-group">
        <label>GPA</label>
        <input name="GPA" class="form-control" />
    </div>

    <div class="form-group">
        <label>Academic Standing</label>
        <input name="AcademicStanding" class="form-control" />
    </div>

    <hr />

    <h4>Login Info</h4>

    <div class="form-group">
        <label>Username</label>
        <input name="Username" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Password</label>
        <input name="Password" type="password" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        Add Student
    </button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger mt-3">
        @TempData["ErrorMessage"]
    </div>
}
