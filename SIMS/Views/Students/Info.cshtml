@*
    Đây là comment Razor (không ảnh hưởng view).
    View này dùng để hiển thị hồ sơ (profile) của một sinh viên.
*@
@model SIMS.DatabaseContext.Entities.Student
@* View nhận vào 1 đối tượng Student *@

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";        @* Layout trang chính *@
    ViewData["title"] = "Profile Students page";         @* Tiêu đề trang *@
    ViewData["breadcrumb"] = "Students";                 @* Breadcrumb chính *@
    ViewData["breadcrumb_item"] = "Profile students";    @* Breadcrumb phụ *@
}

@if (Model == null)
{
    <div class="alert alert-warning">
        <h3>Student information is not available.</h3>
    </div>
}
else
{
    <form>
        <div class="form-group">
            <label>Full Name</label>
            <input class="form-control" value="@Model.FullName" readonly />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input class="form-control" value="@Model.User?.Email" readonly />
        </div>

        <div class="form-group">
            <label>Major</label>
            <input class="form-control" value="@Model.Major" readonly />
        </div>

        <div class="form-group">
            <label>Gender</label>
            <input class="form-control" value="@Model.Gender" readonly />
        </div>

        <div class="form-group">
            <label>Date of Birth</label>
            <input class="form-control" value="@Model.Dob.ToShortDateString()" readonly />
        </div>

        <div class="form-group">
            <label>Class</label>
            <input class="form-control" value="@Model.Class" readonly />
        </div>

        <div class="form-group">
            <label>GPA</label>
            <input class="form-control" value="@Model.GPA" readonly />
        </div>

        <div class="form-group">
            <label>Academic Standing</label>
            <input class="form-control" value="@Model.AcademicStanding" readonly />
        </div>
    </form>
}
