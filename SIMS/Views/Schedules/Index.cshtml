@model IEnumerable<SIMS.DatabaseContext.Entities.Schedule>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Schedules";
    ViewData["breadcrumb"] = "Schedules";
    ViewData["breadcrumb_item"] = "List of Schedules";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<table class="table table-bordered table-striped align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Faculty</th>
            <th>Course</th>
            <th>Class</th>
            <th>Date</th>
            <th>Time</th>
            <th>Room</th>
            @if (User.IsInRole("Admin") || User.IsInRole("Faculty") || User.IsInRole("Student"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>

    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center">No schedules found.</td>
            </tr>
        }
        else
        {
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.ScheduleId</td>
                    <td>@s.Faculty?.FacultyName</td>
                    <td>@s.Course?.CourseName</td>
                    <td>@(string.IsNullOrEmpty(s.Class) ? "-" : s.Class)</td>
                    <td>@s.Date.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (s.StartTime.HasValue && s.EndTime.HasValue)
                        {
                            @($"{s.StartTime:hh\\:mm} - {s.EndTime:hh\\:mm}")
                        }
                        else
                        {
                            <span>-</span>
                        }
                    </td>
                    <td>@(string.IsNullOrEmpty(s.Room) ? "-" : s.Room)</td>

                    <td>
                        @* ADMIN *@
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@s.ScheduleId">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@s.ScheduleId"
                               onclick="return confirm('Delete this schedule?')">Delete</a>

                            <a class="btn btn-sm btn-info"
                               asp-controller="Faculty"
                               asp-action="RecordAttendance"
                               asp-route-scheduleId="@s.ScheduleId">
                                Record Attendance
                            </a>
                        }

                        @* FACULTY *@
                        @if (User.IsInRole("Faculty"))
                        {
                            <a class="btn btn-sm btn-info"
                               asp-controller="Faculty"
                               asp-action="RecordAttendance"
                               asp-route-scheduleId="@s.ScheduleId">
                                Record Attendance
                            </a>
                        }

                        @* STUDENT *@
                        @if (User.IsInRole("Student"))
                        {
                            <a class="btn btn-sm btn-secondary"
                               asp-controller="Students"
                               asp-action="Attendance">
                                Attendance
                            </a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
