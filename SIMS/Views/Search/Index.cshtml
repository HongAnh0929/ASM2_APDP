@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";   // Dùng layout chính
    ViewData["Title"] = "Search Results";          // Tiêu đề trang
}

<h4>Search Results for "@ViewBag.Query"</h4>

@* =========================
   STUDENTS LIST
========================= *@
@{
    var students = (List<SIMS.DatabaseContext.Entities.Student>)ViewBag.Students;
}

<h5>Students</h5>
@if (students != null && students.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Class</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in students)
            {
                <tr>
                    <td>@s.FullName</td>
                    <td>@s.Class</td>
                    <td>@s.User?.Email</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No students found.</p>
}

@* =========================
   COURSES LIST
========================= *@
@{
    var courses = (List<SIMS.DatabaseContext.Entities.Course>)ViewBag.Courses;
}

<h5>Courses</h5>
@if (courses != null && courses.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Class</th>
                <th>Faculty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in courses)
            {
                <tr>
                    <td>@c.CourseName</td>
                    <td>@c.Class</td>
                    <td>@c.Faculty?.FacultyName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No courses found.</p>
}

@* =========================
   SCHEDULES LIST
========================= *@
@{
    var schedules = (List<SIMS.DatabaseContext.Entities.Schedule>)ViewBag.Schedules;
}

<h5>Schedules</h5>
@if (schedules != null && schedules.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Room</th>
                <th>Course</th>
                <th>Faculty</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in schedules)
            {
                <tr>
                    <td>@(s.Date == default ? "-" : s.Date.ToString("yyyy-MM-dd"))</td>
                    <td>
                        @(s.StartTime.HasValue && s.EndTime.HasValue
                                        ? $"{s.StartTime.Value:hh\\:mm} - {s.EndTime.Value:hh\\:mm}"
                                        : "-")
            </td>
            <td>@(string.IsNullOrEmpty(s.Room) ? "-" : s.Room)</td>
            <td>@s.Course?.CourseName</td>
            <td>@s.Faculty?.FacultyName</td>
        </tr>
                }
        </tbody>
    </table>
}
else
{
    <p>No schedules found.</p>
}