@model SIMS.DatabaseContext.Entities.Course

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Add New Course";
    ViewData["breadcrumb"] = "Courses";
    ViewData["breadcrumb_item"] = "Add a New Course";
}

@* Thông báo lỗi hoặc thành công *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Add" method="post">
    <div class="mb-3">
        <label asp-for="CourseName" class="form-label">Course Name</label>
        <input asp-for="CourseName" class="form-control" />
        <span asp-validation-for="CourseName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Credits" class="form-label">Credits</label>
        <input asp-for="Credits" type="number" class="form-control" />
        <span asp-validation-for="Credits" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Class" class="form-label">Class</label>
        <input asp-for="Class" class="form-control" />
        <span asp-validation-for="Class" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label">End Date</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="FacultyId" class="form-label">Faculty</label>
        <select asp-for="FacultyId" class="form-select" asp-items="ViewBag.Faculties">
            <option value="">-- Select Faculty --</option>
        </select>
        <span asp-validation-for="FacultyId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Course</button>
</form>
