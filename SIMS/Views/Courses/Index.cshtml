@model IEnumerable<SIMS.DatabaseContext.Entities.Course>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["title"] = "Courses page";
    ViewData["breadcrumb"] = "Courses";
    ViewData["breadcrumb_item"] = "List of courses";
}

@* Hiển thị thông báo thành công *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@* Hiển thị thông báo lỗi *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@* Thanh tìm kiếm khóa học *@
<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@(ViewBag.SearchTerm ?? "")" class="form-control" placeholder="Search courses..." />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@* Bảng danh sách khóa học *@
<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Credits</th>
            <th>Class</th>
            <th>Faculty</th>
            <th>StartDate</th>
            <th>EndDate</th>
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="@(User.IsInRole("Admin") ? 8 : 7)" class="text-center">
                    No courses found.
                </td>
            </tr>
        }
        else
        {
            foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>
                        <a asp-controller="Students"
                           asp-action="CourseStudents"
                           asp-route-courseId="@course.CourseId"
                           asp-route-className="@course.Class">
                            @course.CourseName
                        </a>
                    </td>
                    <td>@course.Credits</td>
                    <td>@course.Class</td>
                    <td>@course.Faculty?.FacultyName</td>
                    <td>@course.StartDate?.ToString("dd/MM/yyyy")</td>
                    <td>@course.EndDate?.ToString("dd/MM/yyyy")</td>

                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@course.CourseId"
                               class="btn btn-warning btn-sm">Edit</a>

                            <a asp-action="Delete" asp-route-id="@course.CourseId"
                               class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this course?');">
                                Delete
                            </a>

                            @* Nút enroll tất cả sinh viên lớp đó *@
                            <form asp-action="EnrollAllStudents" method="post" style="display:inline">
                                <input type="hidden" name="courseId" value="@course.CourseId" />
                                <input type="hidden" name="className" value="@course.Class" />
                                <button type="submit" class="btn btn-sm btn-success">
                                    Enroll
                                </button>
                            </form>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
