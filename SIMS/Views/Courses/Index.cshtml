@model IEnumerable<SIMS.DatabaseContext.Entities.Course>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";  // Layout dùng chung cho toàn bộ project
    ViewData["title"] = "Courses page";             // Tiêu đề trang
    ViewData["breadcrumb"] = "Courses";             // Breadcrumb chính
    ViewData["breadcrumb_item"] = "List of courses"; // Breadcrumb phụ
}

@* Hiển thị thông báo thành công *@
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@* Hiển thị thông báo lỗi *@
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

@* ========================
   Thanh tìm kiếm khóa học
   ======================== *@
<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@(ViewBag.SearchTerm ?? "")" class="form-control" placeholder="Search courses..." />
        @* ViewBag.SearchTerm giúp giữ lại giá trị khi user search *@
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@* ========================
   Bảng danh sách khóa học
   ======================== *@
<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Course ID</th>
            <th>Course Name</th>
            <th>Credits</th>
            <th>Class</th>
            <th>Faculty</th>
            <th>StartDate</th>
            <th>EndDate</th>

            @* Chỉ Admin mới có cột hành động *@
            @if (User.IsInRole("Admin"))
            {
                <th>Actions</th>
            }
        </tr>
    </thead>
    <tbody>

        @* Nếu không có khóa học nào trong Model *@
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No courses found.</td>
            </tr>
        }
        else
        {
            @* Duyệt qua từng khóa học trong Model *@
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>               @* Hiển thị ID *@
                    <td>@course.CourseName</td>             @* Tên khóa *@
                    <td>@course.Credits</td>                @* Số tín chỉ *@
                    <td>@course.Class</td>                  @* Lớp học *@
                    <td>@course.Faculty?.FacultyName</td>   @* Tên giảng viên — dùng ?. để tránh lỗi null *@
                    <td>@course.StartDate</td>              @* Hiển thị ngày bắt đầu môn *@
                    <td>@course.EndDate</td>                @* Hiển thị ngày kết thúc môn *@

                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            @* Nút sửa khóa học *@
                            <a asp-action="Edit" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Edit</a>

                            @* Nút xóa kèm confirm *@
                            <a asp-action="Delete" asp-route-id="@course.CourseId" class="btn btn-danger btn-sm"
                               onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>
