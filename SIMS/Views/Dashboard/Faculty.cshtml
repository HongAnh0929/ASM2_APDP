@model List<SIMS.DatabaseContext.Entities.Course>

@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Faculty Dashboard";
    ViewData["breadcrumb"] = "Dashboard";
    ViewData["breadcrumb_item"] = "Home";

    var today = DateTime.Today;

    // Assigned courses được gửi qua Model
    var assignedCourses = Model;

    // Lịch dạy trong ngày gửi qua ViewBag, đã cast rõ ràng
    var todaySchedule = ViewBag.TodaySchedule as List<SIMS.DatabaseContext.Entities.Schedule>;
}

<h4 class="mb-3">Assigned Courses</h4>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Course</th>
            <th>Class</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>
    </thead>
    <tbody>
        @if (assignedCourses != null && assignedCourses.Count > 0)
        {
            foreach (var c in assignedCourses)
            {
                <tr>
                    <td>@c.CourseName</td>
                    <td>@c.Class</td>
                    <td>@(c.StartDate.HasValue? c.StartDate.Value.ToString("dd/MM/yyyy") : "—")</td>
                    <td>@(c.EndDate.HasValue? c.EndDate.Value.ToString("dd/MM/yyyy") : "—")</td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="4">No assigned courses</td></tr>
        }
    </tbody>
</table>

<div class="card shadow-sm p-3 mb-4">
    <h4 class="mb-3">Today's Schedule - @today.ToString("dd/MM/yyyy")</h4>

    <table class="table table-bordered text-center">
        <thead>
            <tr>
                <th>Time</th>
                <th>Course</th>
                <th>Room</th>
            </tr>
        </thead>

        <tbody>
            @if (todaySchedule != null && todaySchedule.Count > 0)
            {
                foreach (var s in todaySchedule)
                {
                    <tr>
                        <td>
                            @* Giả sử StartTime và EndTime là TimeSpan *@
                            @($"{s.StartTime:hh\\:mm} - {s.EndTime:hh\\:mm}")
                        </td>
                        <td>@s.Course.CourseName</td>
                        <td>@s.Room</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">No schedule for today</td>
                </tr>
            }
        </tbody>
    </table>
</div>
